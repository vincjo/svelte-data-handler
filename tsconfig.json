{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2020", "DOM"],
		"paths": {
			"$core/*": ["src/core/*"],
			"$lib": ["src/lib"],
			"$lib/*":["src/lib/*"],
			"$utils/*": ["src/utils/*"],
			"$components/*": ["src/components/*"],
			"$data/*": ["src/data/*"],
		},
		"moduleResolution": "node",
		"module": "es2020",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020"
	}
}
